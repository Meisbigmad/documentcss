{
	"siteDefaults": {
		"templates": "theme/templates"
	},
	"sites" : {
		"pages": {
			"parent": "home",
			"dest": "site",
			"pattern": "_pages/*.md"
		},
		"example": {
			"parent": "Styles",
			"dest": "site/examples",
			"glob": {
				"pattern": "./node_modules/documentjs/{styles,site/default/static/styles}/**/*.{less,css,md}"
			}
		},
		"guides": {
			"parent": "live-style-guide",
			"dest": "site/guides",
			"glob": {
				"pattern": "./node_modules/documentjs/docs/livestyleguide/**/*.md"
			}
		}
	}
}